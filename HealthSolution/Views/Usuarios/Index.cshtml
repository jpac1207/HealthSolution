@model IEnumerable<HealthSolution.Models.Usuario>

@{
    ViewBag.Title = "Usuários";
}

<p class="mt-3">
    Usuário
    <span style='float:right;' ">
        <a class="btn btn-primary" href="@Url.Action("")/Create">Cadastrar Usuário <span class="oi oi-plus"></span></a>
    </span>
</p>
<table class="table">
    <tr class="bg-light text-dark">
        <th>
            Nome
        </th>
        <th>
            Médico
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @(item.IsMedical ? "Sim" : "Não")
            </td>
            @if (item.Name != "admin")
            {
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            }
        </tr>
    }

</table>
