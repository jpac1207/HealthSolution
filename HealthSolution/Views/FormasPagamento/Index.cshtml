@model IEnumerable<HealthSolution.Models.FormaPagamento>

@{
    ViewBag.Title = "Index";
}

<p  class="mt-3">
    Formas de Pagamento
    <span style='float:right;'">
        <a class="btn btn-primary" href="@Url.Action("")/Create">Cadastrar <span class="oi oi-plus"></span></a>
    </span>
</p>

<table class="table table-hover">
    <tr class="bg-light text-dark">
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Detalhar", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
