
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="card col-md-12">
            <div class="card-body">
                @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-inline justify-content-center col-md-12" }))
                {
                    <div class="form-group">
                        <label class="col-form-label">
                            <span class="oi oi-people"></span>                      
                            <input type="text" name="user" class="form-control m-2" placeholder="Usuário" />     
                        </label>                       
                    </div>
                    <div class="form-group m-3">
                        <label class="col-form-label">
                            <span class="oi oi-key"></span>
                            <input type="password" name="password" class="form-control m-2" placeholder="Senha" />                            
                        </label>                        
                    </div>
                    <div class="form-group m-3">
                        <button class="btn btn-success btn-lg">Login</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



