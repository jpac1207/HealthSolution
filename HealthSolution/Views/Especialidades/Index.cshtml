@model IEnumerable<HealthSolution.Models.Especialidade>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Especialidades</h2>

<p>
    @Html.ActionLink("Cadastrar Nova Especialidade", "Create", new { }, new { @class = "btn btn-primary btn-block" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            Valor Consulta
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorConsulta)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.Id }, new { @class = "btn btn-secondary" }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
