@model HealthSolution.ViewModels.ConsultaViewModel

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center">Cadastrar Nova Consulta</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div><h4>Dados do Agendamento</h4></div>

        <div class="row">
            <div class="col-md-4">
                <label class="control-label">Especialidade</label>
                <div class="col-md-10">
                    @Html.DropDownList("EspecialidadeId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EspecialidadeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <label class="control-label">Doutor</label>
                <div class="col-md-10">
                    @Html.DropDownList("EspecialistaId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EspecialistaId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <label class="control-label">Data</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control date datepicker" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-md-4">
                <label class="control-label">Forma de Pagamento</label>
                <div class="col-md-10">
                    @Html.DropDownList("FormaPagamentoId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FormaPagamentoId, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div><h4>Dados do  Paciente</h4></div>
        <div class="row">

            <div class="col-md-4">
                @Html.Label("CPF", htmlAttributes: new { @class = "control-label" })
                <div class="row">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Paciente.Cpf, new { htmlAttributes = new { @class = "form-control cpf" } })
                        @Html.ValidationMessageFor(model => model.Paciente.Cpf, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1">
                        <span class="oi oi-magnifying-glass"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <label class="control-label">Paciente</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Paciente.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(Model => Model.Paciente.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <label class="control-label">Data Nascimento</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Paciente.DataNascimento, new { htmlAttributes = new { @class = "form-control date datepicker" } })
                    @Html.ValidationMessageFor(model => model.Paciente.DataNascimento, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="row">


            <div class="col-md-4">
                <label class="control-label">Cidade</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Paciente.Endereco.Cidade, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Paciente.Endereco.Cidade, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <label class="control-label">Bairro</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Paciente.Endereco.Bairro, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Paciente.Endereco.Bairro, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-md-4">
                <label class="control-label">Rua</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Paciente.Endereco.Rua, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Paciente.Endereco.Rua, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-4">
                <label class="control-label">Número Residência</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Paciente.Endereco.Numero, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Paciente.Endereco.Numero, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <label class="control-label">Telefone</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Paciente.Telefone.Numero, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Paciente.Telefone.Numero, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div><h4>Dados Gerais</h4></div>

        <div class="row">

            <div class="col-sm-9 col-md-6 col-lg-8" style="width:'100%'">
                <label class="control-label">Observação</label>
                    @Html.TextAreaFor(model => model.Observacao,  new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
                
            </div>

        </div>

        <div class="form-group mt-5">
            <div class="text-center">
                <input type="submit" value="Agendar" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para a Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/health-solution")
}
