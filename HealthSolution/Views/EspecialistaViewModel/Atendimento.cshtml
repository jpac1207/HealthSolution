@model HealthSolution.ViewModels.AtendimentoViewModel
@using HealthSolution.Extensions
@{
    ViewBag.Title = "Atendimento";
}

<p class="mt-3">
    Atendimento
</p>


<div class="row mt-5">

    <div class="col-md-3">

        <div class="card" style="background-color:#F1EDF8;min-height:100%;">
            <table class="m-3">
                <tr>
                    <td>
                        <label class="font-weight-bold" style="color:dimgray;font-size:large">Nome:</label> <label style="font-size:medium">@Model.NomePaciente</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="font-weight-bold" style="color:dimgray;font-size:large">Data de Nascimento:</label> <label style="font-size:medium"> @Model.DataNascimento</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="font-weight-bold" style="color:dimgray;font-size:large"> @(Model.Tipo == "Consulta" ? "Especialidade" : "Procedimento"): </label> <label style="font-size:medium"> @Model.Especialidade</label>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label class="font-weight-bold" style="color:dimgray;font-size:large"> Observação: </label> <label style="font-size:medium"> @Model.Observacao </label>
                    </td>
                </tr>
            </table>

        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">Anotações Médicos</div>
            <div class="card-body">
                <textarea class="form-control" placeholder="Escreva aqui..." style="border-top:none;border-right:none;border-bottom:1px;min-height:300px"></textarea>
            </div>

        </div>

        <div class="card mt-5">
            <div class="card-header">Medicamentos</div>
            <div class="card-body">
                <textarea  class="form-control" placeholder="Escreva aqui..." style="border-top:none;border-right:none;border-bottom:1px;"></textarea>
            </div>

        </div>
    </div>
</div>

<div class="text-center">
    <button class="btn btn-success mt-5"> Imprimir Receita</button>
    <button class="btn btn-success mt-5">Salvar Antedimento</button>
</div>

<div class="container">

    
</div>